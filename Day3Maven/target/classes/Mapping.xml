<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">


<hibernate-mapping>
	<class name="com.day3.maven.Player" table="Player">
		
		<id name="PlayerId" column="id">
			<generator class="assigned"></generator>
		<!-- automatically primary key is set inside database -->
		</id>

		
		<property name="PlayerName" column="name"></property>

	</class>

</hibernate-mapping>